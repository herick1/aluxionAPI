<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../views/partials/head'); %>
</head>

<body>
  <%- include('../views/partials/navbar-login'); %>

    <div class="container">
      <h1 class="text-center p-3">Login Here</h1>
      <div
        style="margin: 0 auto"
        class="col-12 col-md-6 col-lg-5 p-5 customborder"
      >
        <% if( error !="" ){ %>
        <div
          class="alert alert-danger alert-dismissible fade show"
          role="alert"
        >
          <strong> Error </strong>
          <%= error %>.
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"
          ></button>
        </div>
        <% } %>

        <!-- if someone tried to access a protected route  -->
        <!-- this flash message will show them to login first  -->

        <% if( error_messages !="" ){ %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <strong> Error </strong>
              <%= error_messages %>.
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
          <% } %>

        <form action="/login" , method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <div class="mb-3">
            <label for="username">Enter Your Email</label>
            <input
              type="email"
              class="form-control form-control-lg"
              name="email"
              id="username"
              autocomplete="off"
              placeholder="Email"
            />
          </div>
          <div class="mb-3">
            <label for="password">Enter Your Password</label>
            <input
              type="password"
              class="form-control form-control-lg"
              name="password"
              id="password"
              autocomplete="off"
              placeholder="Password"
            />
          </div>
          <div class="d-grid gap-3 mb-3">
            <input
              type="submit"
              class="btn btn-lg btn-block btn-outline-primary"
              value="Login"
            />
          </div>
          <p>New Here ? <a class="card-link" href="/signup">Register Now</a></p>
          <!-- added a new button for redirecting to forgot password page  -->
          <p>
            <a class="card-link" href="/user/forgot-password"
              >Forgot Password</a
            >
          </p>
        </form>
      </div>
    </div>

  <%- include('../views/partials/footer'); %> 

  </body>
</html>
